{{#if removedUser}}
<div class="alert alert-dismissible alert-success show" role="alert">
  The user has been removed
  <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<div class="row">
  <div class="col-6">
    <h1>Users</h1>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/new_user" type="button" class="btn btn-primary align-self-center">+ New User</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.first_name}}</td>
      <td>{{this.last_name}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phone}}</td>
      <td>
        <a href="/view_user/{{this.id}}" type="button" class="btn btn-light btn-small">
          <i class="bi bi-eye"></i>View
        </a>
        <a href="/update_user/{{this.id}}" type="button" class="btn btn-light btn-small">
          <i class="bi bi-pencil"></i>Update
        </a>
        <a href="/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete
        </a>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>